.amd-popover-item{position:relative;display:flex;align-items:center;width:145px;padding:13px 20px;white-space:nowrap;box-sizing:border-box;overflow:hidden;font-size:15px}.amd-popover-item::after{content:"";position:absolute;background-color:#333;display:block;top:auto;right:0;bottom:0;left:52px;height:1px;transform:scaleY(.5)}.amd-popover-item:last-child::after,.amd-popover-item:last-child::before{display:none}.amd-popover-item-hover{background-color:#333}.amd-popover-item-icon{display:flex;justify-content:center;align-items:center;width:24px;height:24px;margin-right:8px;overflow:hidden;text-align:left}.amd-popover-item-icon .amd-icon{display:flex;align-items:center;font-size:16px;color:#fff}.amd-popover-item-icon-item{display:flex;justify-content:center;width:100%;height:100%}.amd-popover-item-icon-item-image{width:100%;height:100%}.amd-popover-item-icon:empty{display:none}.amd-popover-item-text{color:#fff;font-size:15px;font-family:PingFangSC-Regular}