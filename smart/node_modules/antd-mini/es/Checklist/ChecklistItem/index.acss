.amd-checklist-item{background-color:#fff}.amd-checklist-item-hover{background-color:#eee}.amd-checklist-item-content{display:flex;align-items:center;padding:12px 12px}.amd-checklist-item-content-disabled{opacity:.4}.amd-checklist-item-content-box{flex:1}.amd-checklist-item-content-box-nut{display:flex;align-items:center}.amd-checklist-item-image{width:36px;height:36px;border-radius:4px}.amd-checklist-item-text{flex:1;margin-left:12px}.amd-checklist-item-text-no-image{margin-left:0}.amd-checklist-item-text-title{color:#333;font-size:17px;line-height:24px}.amd-checklist-item-text-description{font-size:13px;color:#999;margin-top:1px;line-height:18px}.amd-checklist-item-checked-disabled{opacity:.4}.amd-checklist-item:last-child .amd-checklist-item-line{display:none}.amd-checklist-item-line{margin-left:12px;position:relative}.amd-checklist-item-line::after{content:"";position:absolute;background-color:#eee;display:block;top:auto;right:0;bottom:0;left:0;height:1px;transform:scaleY(.5)}