.amd-result{position:relative;text-align:center;line-height:normal;box-sizing:border-box}.amd-result::after{content:"";position:absolute;background-color:#eee;display:block;top:auto;right:0;bottom:0;left:0;height:1px;transform:scaleY(.5)}.amd-result-main{padding:32px 12px;margin-bottom:20px;background-color:#fff}.amd-result-image{display:flex;justify-content:center;align-items:center;width:64px;height:64px;margin:0 auto;overflow:hidden;text-align:center;line-height:64px}.amd-result-image+.amd-result-message,.amd-result-image+.amd-result-title{padding-top:20px}.amd-result-image-success{color:#1677ff}.amd-result-image-danger{color:#ff3b30}.amd-result-image-info{color:#1677ff}.amd-result-image-warn{color:#ff8f1f}.amd-result-image-wait{color:#00b578}.amd-result-title{font-size:18px;color:#333}.amd-result-title:empty{display:none}.amd-result-message{padding-top:8px;font-size:13px;color:#999}.amd-result-message:empty{display:none}.amd-result-buttons{padding:0 12px}.amd-result-buttons .amd-button{margin-bottom:12px}.amd-result-buttons .amd-button:last-child{margin-bottom:0}