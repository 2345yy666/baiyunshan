.amd-tips-wrap{position:relative;float:left;font-size:15px;color:#fff;border-radius:8px;max-width:351px;background:rgba(0,0,0,.75)}.amd-tips-wrap-content{display:flex;align-items:center;padding:8px 12px}.amd-tips-single :not(.amd-tips-content-bottom)~.amd-tips-close{align-self:center}.amd-tips-content{display:flex}.amd-tips-content-bottom{flex-direction:column}.amd-tips-image{flex:0 36px;width:36px;height:36px;border-radius:4px;margin-right:12px;box-sizing:content-box;margin-top:3px;margin-bottom:3px;flex-shrink:0}.amd-tips-close{align-self:flex-start;justify-content:flex-end;text-align:right;padding-left:12px;padding-top:3px}.amd-tips-button{padding-bottom:0;height:24.5px}.amd-tips-button-container-bottom{padding-top:8px;padding-bottom:3px;display:flex;justify-content:flex-end}.amd-tips-button-container-right{padding-left:12px;display:flex;align-items:center}.amd-tips-arrow{position:absolute;width:0;height:0;border-top:8px solid #000;border-bottom:0 none;border-left:8px solid transparent;border-right:8px solid transparent}.amd-tips-arrow-bottom-left{bottom:-7.5px;left:26px}.amd-tips-arrow-bottom-right{bottom:-7.5px;right:26px}.amd-tips-arrow-bottom-center{bottom:-7.5px;left:50%;margin-left:-7.5px}.amd-tips-arrow-top-left{top:-7.5px;left:26px;transform:rotate(180deg)}.amd-tips-arrow-top-right{top:-7.5px;right:26px;transform:rotate(180deg)}.amd-tips-arrow-top-center{top:-7.5px;left:50%;margin-left:-7.5px;transform:rotate(180deg)}.amd-tips-arrow-left{top:50%;left:-10px;margin-top:-4px;transform:rotate(90deg) translateY(6%)}.amd-tips-arrow-right{top:50%;right:-10px;margin-top:-4px;transform:rotate(-90deg) translateY(6%)}