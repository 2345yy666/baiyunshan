.amd-checkbox{position:relative;display:inline-flex;align-items:center;padding-left:22px;height:22px}.amd-checkbox-base{position:absolute;top:0;left:0;width:100%;height:100%;z-index:2;opacity:0}.amd-checkbox-fake{position:absolute;top:0;left:0;width:22px;height:22px;overflow:hidden;z-index:1;pointer-events:none;border:1px solid #ccc;border-radius:50vh;background-color:#fff;box-sizing:border-box;transition:background-color .2s ease-out;display:flex;justify-content:center;align-items:center}.amd-checkbox-fake-image{height:100%;width:100%;position:absolute;top:0;right:0}.amd-checkbox-fake-icon{font-size:24px}.amd-checkbox-fake-disabled-checked{background-color:#e5e5e5;border:none;color:#b7b7b7}.amd-checkbox-fake-disabled-checked:not(.amd-checkbox-fake-custom){border:1px solid #d0d0d0}.amd-checkbox-fake-disabled-checked:not(.amd-checkbox-fake-custom) .amd-checkbox-fake-icon{font-size:13px;color:#aaa}.amd-checkbox-fake-disabled-not-checked{background-color:#e5e5e5;border-color:#d0d0d0;color:#f5f5f5}.amd-checkbox-fake-not-disabled-checked{border:none;color:#1677ff}.amd-checkbox-fake-not-disabled-not-checked{color:#d0d0d0}.amd-checkbox-fake-custom{border:none;background-color:#fff}.amd-checkbox-disabled .amd-checkbox-content{opacity:.4}.amd-checkbox-content{padding-left:8px}.amd-checkbox-content:empty{display:none}